<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/threeDayPage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/locationLeftBtn"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="Left" />

            <TextView
                android:id="@+id/locationNameTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="locationName" />

            <Button
                android:id="@+id/locationRightBtn"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text="Right" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dayOneDateTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dayOneImg"
                        android:layout_width="200dp"
                        android:layout_height="81dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cloudy" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/dayOneMinTempTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Minimum Temperature:" />

                        <TextView
                            android:id="@+id/dayOneMaxTempTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Maximum Temperature:" />

                        <Button
                            android:id="@+id/dayOneBtn"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="View More Details" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dayTwoDateTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dayTwoImg"
                        android:layout_width="200dp"
                        android:layout_height="81dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cloudy" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/dayTwoMinTempTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Minimum Temperature:" />

                        <TextView
                            android:id="@+id/dayTwoMaxTempTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Maximum Temperature:" />

                        <Button
                            android:id="@+id/dayTwoBtn"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="View More Details" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dayThreeDateTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dayThreeImg"
                        android:layout_width="200dp"
                        android:layout_height="81dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cloudy" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/dayThreeMinTempTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Minimum Temperature:" />

                        <TextView
                            android:id="@+id/dayThreeMaxTempTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Maximum Temperature:" />

                        <Button
                            android:id="@+id/dayThreeBtn"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="View More Details" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            tools:context=".viewModels.MapsViewModel" />

        <Button
            android:id="@+id/returnBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return to Menu" />

    </LinearLayout>
</ScrollView>